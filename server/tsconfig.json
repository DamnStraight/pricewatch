{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "downlevelIteration": true,
    "typeRoots": [
      "./types"
    ]
  },
  "exclude": [
    "test",
    "./node_modules/",
    "./dist/"
  ],
  "ts-node": {
    "files": true
  }
}
